{
  "name": "peekaboo",
  "description": "nginx log viewer",
  "packageManager": "bun@1.2.19",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "turbo run dev --filter=frontend",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:shared": "turbo run dev --filter=@peekaboo/shared",
    "dev": "turbo dev",
    "test:frontend": "turbo run test --filter=frontend",
    "test:backend": "turbo run test --filter=backend",
    "test": "turbo test",
    "build": "turbo build",
    "lint": "biome lint --write",
    "lint:check": "biome lint",
    "format": "biome format --write",
    "format:check": "biome format",
    "check": "biome check --write",
    "check:check": "biome check",
    "release": "semantic-release"
  },
  "keywords": [
    "ssh",
    "logs",
    "nginx",
    "bun",
    "react"
  ],
  "author": "Dino Kupinic",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "^24.2.3",
    "turbo": "^2.5.5"
  }
}
